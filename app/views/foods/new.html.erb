<h3 class="h3 m-3">Create a Food Form</h3>

<%= form_with model: @food_new, url: foods_path, method: :post, class: "w-50 m-3", local: true, scope: :foods do |f|  %>

  <div class = "form-group">
    <%= f.label :name, for: "names" %><br>
    <%= f.text_field :name, class: "form-control", id: "names"%>
  </div>
  <div class = "from-group">
    <%= f.label :measurement_unit, for: "measures"  %><br>
    <%= f.text_field :measurement_unit,  class: "form-control", id: "measures" %>
  </div>

  <div class = "form-group mb-3">
    <%= f.label :price, for: "prices" %><br>
    <%= f.text_field :price, class: "form-control", id: "prices" %>
  </div>

  <%= f.submit "Send Post", class: "btn btn-secondary"%>
<% end %>